{
    "manifest_version": 3,
    "default_locale": "fr",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.1.0",

    "icons": {
        "48": "images/48.png",
        "96": "images/96.png",
        "128": "images/128.png",
        "256": "images/256.png",
        "512": "images/512.png"
    },
    
    "web_accessible_resources": [
      {
        "resources": ["images/128.png", "images/copy.svg"],
        "matches": ["<all_urls>"]
      }
    ],

    "background": {
        "scripts": [ "background.js" ],
        "type": "module",
        "service_worker": "background.js"
    },

    "content_scripts": [{
        "js": [ "content.js" ],
        "matches": [ "<all_urls>" ]
    }],

    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/toolbar-icon.svg"
    },

    "permissions": [ "storage", "activeTab", "nativeMessaging" ]
}
